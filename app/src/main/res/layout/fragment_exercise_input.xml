<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.scottz.lifttracker.ExerciseInputFragment">

    <TextView
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight"
        android:textSize="18sp"
        android:id="@+id/tv_weight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_margin="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="3"
        android:textSize="16sp"
        android:inputType="number|numberDecimal"
        android:id="@+id/et_weight"
        android:layout_alignBaseline="@+id/tv_weight"
        android:layout_toRightOf="@+id/tv_weight"
        android:layout_toEndOf="@+id/tv_weight"
        android:imeOptions="actionNext" />

    <TextView
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reps"
        android:textSize="18sp"
        android:id="@+id/tv_reps"
        android:layout_toRightOf="@+id/et_weight"
        android:layout_toEndOf="@+id/et_weight"
        android:layout_alignBaseline="@+id/tv_weight" />

    <EditText
        android:layout_margin="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="3"
        android:textSize="16sp"
        android:inputType="number|numberDecimal"
        android:id="@+id/et_reps"
        android:layout_toRightOf="@+id/tv_reps"
        android:layout_toEndOf="@+id/tv_reps"
        android:layout_alignBaseline="@+id/tv_weight"
        android:imeOptions="actionNext" />

    <Button
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_toRightOf="@+id/et_reps"
        android:layout_alignBaseline="@+id/tv_weight"
        android:id="@+id/button_submit"
        />

</RelativeLayout>
